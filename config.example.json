{
  "server": {
    "port": ":58080",
    "static_dir": "static",
    "log_level": "info",
    "use_embedded": true
  },
  "database": {
    "path": "./gatekeeper.db",
    "driver": "sqlite3"
  },
  "session": {
    "secret_key": "your-secret-key-change-this-in-production",
    "name": "gatekeeper-session",
    "max_age": 86400
  },
  "templates": {
    "directory": "templates",
    "pattern": "*.html",
    "use_embedded": true
  },
  "admin": {
    "username": "admin",
    "password": "change-me-on-first-run",
    "role": "approver"
  },
  "security": {
    "username_pattern": "^([a-z]\\d{5}|\\d{5})$",
    "allowed_roles": ["applicant", "approver"],
    "bcrypt_cost": 12
  },
  "expiration": {
    "cleanup_interval_minutes": 5,
    "enabled": true
  }
}